<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/alert_bg"
    android:padding="10dp" >

    <TextView
        android:id="@+id/alert_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/alert_message"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/alert_bt_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/alert_button_background"
            android:text="@string/alert_dialog_ok"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/alert_bt_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/alert_button_background"
            android:text="@string/alert_dialog_cancel"
            android:textColor="@android:color/white"
            android:textSize="26sp" />
    </LinearLayout>

</RelativeLayout>